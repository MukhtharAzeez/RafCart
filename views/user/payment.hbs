<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="RAFCART - Multipurpose eCommerce HTML Template">
    <meta name="author" content="Programming Kit">
    <title>RAFCART - Multipurpose eCommerce HTML Template</title>
    <link rel="shortcut icon" href="//images/favicon.png" type="image/x-icon">
    
    <!-- all css -->  
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/jquery-ui.css">
    <link rel="stylesheet" href="/css/slick.css">
    <link rel="stylesheet" href="/css/line-awesome.css">
    <link rel="stylesheet" href="/css/nice-select.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
</head>

<body>

    <!-- Preloader -->
    <div class="preloader">
        <img src="https://res.cloudinary.com/dr2hks7gt/image/upload/v1668106009/La%20Bonnz/Walk_xjkfby.gif" alt="preloader">
    </div>

  
       {{>user_mobile_screen}}    
    

    <!-- breadcrumbs -->
    <div class="container">
        <div class="breadcrumbs">
<a href="index-1.html"><i class="las la-home"></i></a>
            <a href="#">Shop</a>
            <a href="#" class="active">Payment</a>
        </div>
    </div>

    <!-- payment methods -->
    <div class="cart_area section_padding_b">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-4">
                    
                    <div class="card" style="margin-bottom: 20px;">
                        <div class="card-header">
                           
                            Address to Deliver    <span id="fullName" style="font-weight: bold;">{{userAddress.address.fullName}}</span>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p style="font-size: 16px;" id="mobile">{{userAddress.address.phone}} </p>
                                <p style="font-size: 16px;" id="address">{{userAddress.address.address}}   {{userAddress.address.city}}   {{userAddress.address.state}}(State)  {{userAddress.address.country}}</p>
                                </p>
                            </blockquote>
                        </div>
                    </div>
                    <h4 class="shop_cart_title ps-4">Select payment method</h4>
                    <div class="payment_method_options">
                        <div class="single_payment_method active" data-target=".credit_card">
                            <div class="sp_img">
                                <img loading="lazy"  src="/images/credit-card.png" alt="credit card">
                            </div>
                            <p class="sp_text">Credit Card</p>
                        </div>
                        <div class="single_payment_method" data-target=".pay_pal">
                            <div class="sp_img">
                                <img loading="lazy"  src="/images/paypal.png" alt="paypal">
                            </div>
                            <p class="sp_text">Paypal</p>
                        </div>
                        <div class="single_payment_method" data-target=".cash_on">
                            <div class="sp_img">
                                <img loading="lazy"  src="/images/cash-on.png" alt="cash on delivery">
                            </div>
                            <p class="sp_text">Cash on Delivery</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-10">


                            <div class="payment_methods pay_pal">          
                                <div class="payment_method_title">
                                    <h4>Razorpay</h4>
                                    <div class="payment_method_img">
                                         <div class="d-flex">
                                             <img loading="lazy"  src="/images/razorpay-icon.png" alt="razopay">
                                         </div>
                                    </div>
                                </div>   
                                <div class="text-center mt-4">
                                    <p>Payment using your paypal</p>
                                    <button class="default_btn rounded" onclick="confirmOrder('onlinePayment')">Pay Now</button>
                                </div>
                            </div>

                            <div class="payment_methods cash_on">          
                                <div class="payment_method_title">
                                    <h4>Cash On delivery</h4>
                                    <div class="payment_method_img">
                                         <div class="d-flex">
                                            <img loading="lazy"  src="/images/cash-on.png" alt="cash on delivery">
                                         </div>
                                    </div>
                                </div>   
                                <div class="text-center mt-4 cash_on_text">
                                    <p>you can pay in cash to our courier 
                                        when you receive the goods at your doorstep.</p>
                                    <button class="default_btn rounded" onclick="confirmOrder('COD')">Confirm order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5 col-md-6">
                    <h4 class="shop_cart_title ps-3">Your order</h4>
                    <div class="checkout_order mt-4">
                        <h4>product</h4>
                        {{#each cartItems}}
                        <div class="single_check_order">
                            <div class="checkorder_cont">
                                <h5>{{this.product.name}}</h5>
                                <p>x {{this.quantity}}</p>
                            </div>
                            
                            <p class="checkorder_price">₹{{this.total}}.00</p>
                        </div>
                        {{/each}}
                        <div class="single_check_order subs">
                            <div class="checkorder_cont subtotal-h">
                                <h5>Subtotal</h5>
                            </div>
                            <p class="checkorder_price">₹{{total}}.00</p>
                        </div>
                        <div class="single_check_order subs">
                            <div class="checkorder_cont subtotal-h">
                                <h5>Shipping</h5>
                            </div>
                            <p class="checkorder_price">Free</p>
                        </div>
                        <div class="single_check_order total">
                            <div class="checkorder_cont">
                                <h5>Total</h5>
                            </div>
                            <p class="checkorder_price">₹{{total}}.00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- copyright -->
    <div class="copyright_wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="copyright_text">© RAFCART - All Rights Reserved</p>
                </div>
                <div class="col-md-6">
                    <div class="payment_method">
                        <img loading="lazy"  src="/images/payment-method.png" alt="payment method">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- all js -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/slick.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/confirmOrder.js"></script>
</body>
</html>