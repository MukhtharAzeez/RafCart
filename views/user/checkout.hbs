<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="RAFCART - Multipurpose eCommerce HTML Template">
    <meta name="author" content="Programming Kit">
    <title>RAFCART - Multipurpose eCommerce HTML Template</title>
    <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">

    <!-- all css -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/jquery-ui.css">
    <link rel="stylesheet" href="css/slick.css">
    <link rel="stylesheet" href="css/line-awesome.css">
    <link rel="stylesheet" href="css/nice-select.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>

<body>

    <!-- Preloader -->
    <div class="preloader">
         <img src="https://res.cloudinary.com/dr2hks7gt/image/upload/v1668106009/La%20Bonnz/Walk_xjkfby.gif" alt="preloader">
    </div>


       {{>user_mobile_screen}}    
   

    <!-- breadcrumbs -->
    <div class="container">
        <div class="breadcrumbs">
            <a href="index-1.html"><i class="las la-home"></i></a>
            <a href="#">Shop</a>
            <a href="#" class="active">Checkout</a>
        </div>
    </div>

    <!-- cart area -->
    <div class="cart_area section_padding_b">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-7 col-md-6">

                    <h4 class="shop_cart_title mb-4 ps-3">Billing details</h4>
                    

                    {{#each userAddress}}
                    <div class="card" style="margin-bottom: 20px;">
                        <div class="card-header">
                            <input type="radio" id="{{userAddress}}" name="address" value="{{this.index}}">
                            Address {{this.index}} , <span id="fullName"
                                style="font-weight: bold;">{{this.fullName}}</span>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p style="font-size: 16px;" id="address">Mobile : {{this.phone}} <br>{{this.address}}
                                    {{this.city}} {{this.state}}(State) {{this.country}}
                                </p>
                            </blockquote>
                        </div>
                    </div>
                    {{/each}}
                    
                    <a href="/add-address?addingPlace=checkout">
                        <div class="card" style="margin-bottom: 20px;">
                            <div class="card-header">

                                <span id="addAdress" >Add another address <i class="la la-plus-circle"></i></span>
                            </div>

                        </div>
                    </a>


                </div>

                <div class="col-xl-4 col-lg-5 col-md-6">
                    <h4 class="shop_cart_title ps-3">Your order</h4>
                    <div class="checkout_order mt-4">
                        <h4>product</h4>
                        {{#each cartItems}}
                        <div class="single_check_order">
                            <div class="checkorder_cont">
                                <h5>{{this.product.name}}</h5>
                                <p>x {{this.quantity}}</p>
                            </div>

                            <p class="checkorder_price">₹{{this.total}}.00</p>
                        </div>
                        {{/each}}
                        <div class="single_check_order subs">
                            <div class="checkorder_cont subtotal-h">
                                <h5>Subtotal</h5>
                            </div>
                            <p class="checkorder_price">₹{{total}}.00</p>
                        </div>
                        <div class="single_check_order subs">
                            <div class="checkorder_cont subtotal-h">
                                <h5>Shipping</h5>
                            </div>
                            <p class="checkorder_price">Free</p>
                        </div>
                        <div class="single_check_order total">
                            <div class="checkorder_cont">
                                <h5>Total</h5>
                            </div>
                            <p class="checkorder_price">₹{{total}}.00</p>
                        </div>
                        <div class="checkorder_agree custom_check check_2">
                            <input type="checkbox" class="check_inp" hidden id="save-default">
                            <label for="save-default">Agree to our <a href="#" class="text-color">terms &
                                    conditions</a></label>
                        </div>
                        {{!--
                        onclick="saveAddress('{{this.fullName}}','{{this.phone}}','{{this.address}}','{{this.city}}','{{this.state}}','{{this.country}}')"
                        --}}

                        <div class="checkorder_btn">
                            <button class="default_btn rounded w-100" onclick="placeOrder()">place order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- copyright -->
    <div class="copyright_wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="copyright_text">© RAFCART - All Rights Reserved</p>
                </div>
                <div class="col-md-6">
                    <div class="payment_method">
                        <img loading="lazy" src="images/payment-method.png" alt="payment method">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- all js -->
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery-3.5.1.min.js"></script>
    <script src="js/jquery-ui.min.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>
    <script src="js/main.js"></script>
    <script src="js/saveAddress.js"></script>
</body>

</html>